<IfModule mod_expires.c>
    # Enable the expiration engine
    ExpiresActive On

    # Default expiration time is 0 (no explicit cache)
    ExpiresDefault "access plus 0 seconds"

    # Set CSS files to expire in 1 day
    # This specifically targets the main site.css file generated by Antora
    ExpiresByType text/css "access plus 1 day"
    
    ExpiresByType image/jpeg "access plus 1 day"
    ExpiresByType image/png "access plus 1 day"
    ExpiresByType application/javascript "access plus 1 day"

</IfModule>

<IfModule mod_headers.c>
    # Also set the Cache-Control header for broader compatibility (CDNs, proxies)
    # Set max-age for CSS files to match the 1 day (86400 seconds)
    <FilesMatch "\.css$">
        Header set Cache-Control "max-age=86400, public"
    </FilesMatch>
</IfModule>
